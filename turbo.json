{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json"],
  "globalEnv": ["NEXT_PUBLIC_ENVIRONMENT", "NEXT_PUBLIC_MAINTENANCE", "NEXT_PUBLIC_SENTRY_DSN", "SENTRY_AUTH_TOKEN"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
